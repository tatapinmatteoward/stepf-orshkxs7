---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Guides to Footwear Mastery";
const pageDescription = "Discover expert guides on selecting, maintaining, and styling footwear with depth and elegance. Elevate your knowledge and step confidently into the world of sophisticated shoes.";

const guides = [
  {
    id: 1,
    title: "Choosing the Right Footwear",
    excerpt: "Master the art of selecting shoes that blend comfort, style, and functionality.",
    icon: "fas fa-shoe-prints"
  },
  {
    id: 2,
    title: "Footwear Care & Maintenance",
    excerpt: "Learn techniques to preserve your shoes' beauty and extend their lifespan.",
    icon: "fas fa-heartbeat"
  },
  {
    id: 3,
    title: "Styling for Every Occasion",
    excerpt: "Discover how to choose footwear that elevates your entire outfit.",
    icon: "fas fa-user-tie"
  },
  {
    id: 4,
    title: "The Art of Shoe Selection",
    excerpt: "Deep dive into materials, construction, and what makes a quality shoe.",
    icon: "fas fa-clipboard-list"
  }
];

const features = [
  {
    title: "Expert Curated Content",
    description: "Each guide is crafted by footwear experts with decades of experience.",
    icon: "fas fa-chess-knight"
  },
  {
    title: "Timeless Wisdom",
    description: "Knowledge that transcends trends and stands the test of time.",
    icon: "fas fa-clock"
  },
  {
    title: "Practical Application",
    description: "Real-world advice you can implement immediately in your footwear journey.",
    icon: "fas fa-lightbulb"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-gray-900 to-gray-800 py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-transparent via-gray-900 to-gray-900"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-block px-4 py-1 mb-4 bg-gray-800 rounded-full border border-gray-700">
          <span class="text-sm font-medium text-gray-300 tracking-wide">GUIDES & INSIGHTS</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6 leading-tight">
          {pageTitle}
        </h1>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto font-light">
          Discover expert guides on selecting, maintaining, and styling footwear with depth and elegance. 
          Elevate your knowledge and step confidently into the world of sophisticated shoes.
        </p>
        <div class="flex justify-center space-x-4">
          <button class="px-8 py-3 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition duration-300 transform hover:-translate-y-1">
            Explore Guides
          </button>
          <button class="px-8 py-3 bg-transparent border-2 border-gray-700 text-white font-medium rounded-lg hover:bg-gray-800 transition duration-300">
            Learn More
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="flex items-start mb-12">
          <div class="mr-6 mt-2 text-amber-700">
            <i class="fas fa-quote-left text-3xl"></i>
          </div>
          <div>
            <p class="text-xl italic text-gray-700 font-serif">
              At <span class="font-bold text-gray-900">Step Forward Insights</span>, we believe that true style begins with informed choices. 
              Our curated guides offer in-depth advice on everything from selecting the perfect pair to preserving their longevity. 
              Whether you're a novice or a seasoned enthusiast, these resources empower you to navigate the world of footwear with confidence and finesse.
            </p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          {features.map((feature) => (
            <div class="group p-6 border border-gray-100 rounded-xl hover:shadow-lg transition-all duration-300 hover:border-amber-200">
              <div class="w-12 h-12 rounded-full bg-amber-50 flex items-center justify-center mb-4 text-amber-700 group-hover:bg-amber-100 transition-colors">
                <i class={`fas ${feature.icon} text-xl`}></i>
              </div>
              <h3 class="text-xl font-serif font-semibold text-gray-900 mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Guide Cards Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">Master the Art of Footwear</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Dive into our comprehensive collection of expert insights designed to elevate your footwear knowledge
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {guides.map((guide) => (
          <div 
            class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 group"
            data-aos="fade-up"
            data-aos-delay={guide.id * 100}
          >
            <div class="p-6">
              <div class="w-14 h-14 rounded-lg bg-amber-50 flex items-center justify-center mb-4 text-amber-700 group-hover:bg-amber-100 transition-colors">
                <i class={`fas ${guide.icon} text-xl`}></i>
              </div>
              <h3 class="text-xl font-serif font-semibold text-gray-900 mb-3">{guide.title}</h3>
              <p class="text-gray-600 mb-4">{guide.excerpt}</p>
              <a href="#" class="text-amber-700 font-medium flex items-center group-hover:text-amber-800">
                Read Guide
                <i class="fas fa-arrow-right ml-2 text-xs group-hover:translate-x-1 transition-transform"></i>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Key Considerations -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-serif font-bold text-gray-900 mb-4">Key Considerations in Footwear Selection</h2>
          <p class="text-gray-600">Essential factors that influence the perfect pairing for your lifestyle</p>
        </div>
        
        <div class="space-y-10">
          <div class="flex flex-col md:flex-row items-start">
            <div class="md:w-1/3 mb-6 md:mb-0 md:pr-8">
              <h3 class="text-2xl font-serif font-semibold text-gray-900 mb-2">Fit and Comfort</h3>
              <p class="text-gray-600">Prioritize arch support and toe room for all-day wear. Proper fit prevents injury and ensures maximum comfort during extended periods of activity.</p>
            </div>
            <div class="md:w-2/3">
              <div class="bg-gray-100 border border-dashed border-gray-300 rounded-lg h-64 flex items-center justify-center">
                <span class="text-gray-500">Visual Representation of Fit Considerations</span>
              </div>
            </div>
          </div>
          
          <div class="flex flex-col md:flex-row-reverse items-start">
            <div class="md:w-1/3 mb-6 md:mb-0 md:pl-8">
              <h3 class="text-2xl font-serif font-semibold text-gray-900 mb-2">Material Matters</h3>
              <p class="text-gray-600">Leather breathes and ages gracefully, while synthetics offer durability. Understanding material properties helps in making long-term footwear decisions.</p>
            </div>
            <div class="md:w-2/3">
              <div class="bg-gray-100 border border-dashed border-gray-300 rounded-lg h-64 flex items-center justify-center">
                <span class="text-gray-500">Comparison Chart of Materials</span>
              </div>
            </div>
          </div>
          
          <div class="flex flex-col md:flex-row items-start">
            <div class="md:w-1/3 mb-6 md:mb-0 md:pr-8">
              <h3 class="text-2xl font-serif font-semibold text-gray-900 mb-2">Occasion-Specific Choices</h3>
              <p class="text-gray-600">Opt for loafers in leather for professional settings or sneakers for casual outings. The right footwear reflects both occasion and personal style.</p>
            </div>
            <div class="md:w-2/3">
              <div class="bg-gray-100 border border-dashed border-gray-300 rounded-lg h-64 flex items-center justify-center">
                <span class="text-gray-500">Occasion-Based Footwear Examples</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-gray-900 to-gray-800">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-serif font-bold text-white mb-6">Elevate Your Footwear Journey Today</h2>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          Join thousands who have transformed their relationship with footwear through our expert-guided approach.
        </p>
        <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-6">
          <button class="px-8 py-4 bg-amber-600 hover:bg-amber-700 text-white font-medium rounded-lg transition duration-300">
            Browse All Guides
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-medium rounded-lg hover:bg-white hover:text-gray-900 transition duration-300">
            Subscribe to Insights
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
</style>