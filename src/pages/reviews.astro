---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Sneaker Reviews | Sole Stories Daily";
const pageDescription = "Explore expert sneaker reviews, honest opinions, and detailed breakdowns of the hottest footwear trends. Your go-to source for informed buying decisions on Sole Stories Daily.";

const reviews = [
  {
    id: 1,
    title: "Nike Air Force 1 '07 Premium - A Timeless Classic Reimagined",
    excerpt: "The Nike Air Force 1 '07 Premium stands as an icon in sneaker culture, blending heritage with modern flair.",
    rating: 5,
    author: "Alex Morgan",
    date: "2023-06-15",
    image: "/images/nike-air-force-1.jpg"
  },
  {
    id: 2,
    title: "Adidas Ultraboost 22 - Energy Return Redefined",
    excerpt: "Experience unmatched cushioning and energy return with the latest Ultraboost iteration.",
    rating: 4,
    author: "Jamie Smith",
    date: "2023-06-10",
    image: "/images/adidas-ultraboost.jpg"
  },
  {
    id: 3,
    title: "New Balance 990v5 - The Ultimate Comfort Hybrid",
    excerpt: "A perfect blend of vintage aesthetics and modern comfort technology.",
    rating: 5,
    author: "Taylor Reed",
    date: "2023-06-05",
    image: "/images/new-balance-990.jpg"
  },
  {
    id: 4,
    title: "Converse Chuck Taylor All Star - Enduring Simplicity",
    excerpt: "The timeless silhouette gets a modern upgrade without losing its soul.",
    rating: 4,
    author: "Jordan Lee",
    date: "2023-05-28",
    image: "/images/converse-chuck-taylor.jpg"
  }
];

const featuredReview = {
  title: "Nike Air Force 1 '07 Premium - A Timeless Classic Reimagined",
  content: `
    <p>The Nike Air Force 1 '07 Premium stands as an icon in sneaker culture, blending heritage with modern flair. This edition features premium leather uppers in a sleek white base, accented by subtle metallic details that catch the light just right.</p>
    
    <h3 class="text-xl font-bold mt-6 mb-3">Key Features:</h3>
    <ul class="list-disc pl-6 space-y-2">
      <li><strong>Cushioning:</strong> Full-length Nike Air unit for superior impact protection.</li>
      <li><strong>Durability:</strong> Reinforced stitching ensures longevity through countless wears.</li>
      <li><strong>Comfort:</strong> Premium leather construction provides a snug yet breathable fit.</li>
      <li><strong>Style:</strong> Classic silhouette updated with modern colourways and premium materials.</li>
    </ul>
    
    <h3 class="text-xl font-bold mt-6 mb-3">Verdict:</h3>
    <p>This version of the AF1 delivers on all fronts. It's suitable for daily wear, casual outings, and even light athletic activities. The premium leather feels luxurious, and the updated sole provides great grip and bounce. A must-have for any sneaker collection.</p>
  `,
  rating: 5,
  author: "Alex Morgan",
  date: "June 15, 2023",
  image: "/images/nike-air-force-1.jpg"
};
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <section class="relative bg-gradient-to-r from-[#ff6b6b] to-[#a7e8c4] py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg">
          Sneaker Reviews
        </h1>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Expert opinions, honest insights, and detailed breakdowns of the hottest footwear trends
        </p>
        <div class="flex justify-center items-center space-x-4">
          <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-white font-medium">
            <i class="fas fa-star text-yellow-300 mr-1"></i> Latest Reviews
          </span>
          <span class="bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-white font-medium">
            <i class="fas fa-fire text-orange-300 mr-1"></i> Trending Now
          </span>
        </div>
      </div>
    </div>
  </section>

  {/* Welcome Section */}
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block bg-[#ff6b6b]/10 text-[#ff6b6b] px-4 py-1 rounded-full mb-6 font-medium">
          <i class="fas fa-shoe-prints mr-2"></i> Sole Stories Daily
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6">
          Welcome to the Heart of Footwear Passion
        </h2>
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          At <span class="font-bold text-[#ff6b6b]">Sole Stories Daily</span>, we dive deep into the world of sneakers, offering unbiased reviews that blend style, comfort, and performance. Whether you're a collector, athlete, or casual wearer, our expert insights help you step confidently into your next pair.
        </p>
        
        <div class="bg-white rounded-2xl shadow-lg p-6 md:p-8 inline-block max-w-3xl">
          <div class="flex flex-col md:flex-row items-center">
            <div class="flex-1 mb-4 md:mb-0">
              <h3 class="text-xl font-bold text-gray-800 mb-2">Featured Review</h3>
              <p class="text-gray-600">Our latest take on the most talked-about sneaker of the season</p>
            </div>
            <button class="bg-[#a7e8c4] hover:bg-[#8bc4a9] text-gray-800 font-bold py-3 px-6 rounded-full transition duration-300 transform hover:scale-105">
              Read Full Review
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Featured Review Section */}
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">
          Featured Review
        </h2>
        <div class="w-24 h-1 bg-[#ff6b6b] mx-auto mb-12 rounded-full"></div>
        
        <div class="bg-gradient-to-br from-[#f8f9fa] to-[#e9ecef] rounded-3xl shadow-xl overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/2 p-8 md:p-12">
              <img src={featuredReview.image} alt={featuredReview.title} class="rounded-2xl shadow-lg w-full object-cover h-80" />
            </div>
            <div class="md:w-1/2 p-8 md:p-12">
              <div class="flex items-center mb-4">
                <div class="flex">
                  {[...Array(5)].map((_, i) => (
                    <i key={i} class={`fas fa-star ${i < featuredReview.rating ? 'text-yellow-400' : 'text-gray-300'}`}></i>
                  ))}
                </div>
                <span class="ml-2 text-gray-600">({featuredReview.rating}.0)</span>
              </div>
              <h3 class="text-2xl font-bold text-gray-800 mb-4">{featuredReview.title}</h3>
              <p class="text-gray-600 mb-6">{featuredReview.excerpt}</p>
              <div class="flex items-center text-sm text-gray-500 mb-6">
                <span class="mr-4">By {featuredReview.author}</span>
                <span>â€¢</span>
                <span class="ml-4">{featuredReview.date}</span>
              </div>
              <div class="prose max-w-none text-gray-700">
                {featuredReview.content}
              </div>
              <button class="mt-8 bg-[#ff6b6b] hover:bg-[#e55a5a] text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105">
                Read Full Review
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Recent Reviews Grid */}
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">
          Latest Sneaker Reviews
        </h2>
        <div class="w-24 h-1 bg-[#a7e8c4] mx-auto mb-12 rounded-full"></div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
          {reviews.map((review) => (
            <div key={review.id} class="bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
              <div class="h-48 overflow-hidden">
                <img src={review.image} alt={review.title} class="w-full h-full object-cover transition-transform duration-500 hover:scale-110" />
              </div>
              <div class="p-6">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="text-xl font-bold text-gray-800">{review.title}</h3>
                  <div class="flex">
                    {[...Array(5)].map((_, i) => (
                      <i key={i} class={`fas fa-star ${i < review.rating ? 'text-yellow-400' : 'text-gray-300'}`}></i>
                    ))}
                  </div>
                </div>
                <p class="text-gray-600 mb-4 line-clamp-2">{review.excerpt}</p>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-500">By {review.author}</span>
                  <span class="text-sm text-gray-500">{new Date(review.date).toLocaleDateString()}</span>
                </div>
                <button class="mt-4 w-full bg-[#ff6b6b]/10 hover:bg-[#ff6b6b] text-[#ff6b6b] hover:text-white font-medium py-2 px-4 rounded-lg transition duration-300">
                  Read Review
                </button>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <button class="bg-white border-2 border-[#ff6b6b] text-[#ff6b6b] hover:bg-[#ff6b6b] hover:text-white font-bold py-3 px-8 rounded-full transition duration-300 shadow-md">
            View All Reviews
          </button>
        </div>
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-r from-[#ff6b6b] to-[#a7e8c4]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Never miss a sneaker story
      </h2>
      <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
        Subscribe to our newsletter and get the latest reviews delivered straight to your inbox every week
      </p>
      <div class="max-w-md mx-auto flex">
        <input 
          type="email" 
          placeholder="Your email address" 
          class="flex-1 px-6 py-4 rounded-l-full focus:outline-none text-gray-800 placeholder-gray-500"
        />
        <button class="bg-gray-800 hover:bg-black text-white font-bold py-4 px-8 rounded-r-full transition duration-300">
          Subscribe
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  .floating {
    animation: float 6s ease-in-out infinite;
</style>