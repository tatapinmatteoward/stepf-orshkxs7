---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Us";
const pageDescription = "Get in touch with Step Forward Insights for inquiries about footwear expertise, collaborations, or personalized advice. We're here to elevate your knowledge with style.";
const contactInfo = [
  { icon: "fas fa-envelope", label: "Email", value: "info@stepforwardinsights.com" },
  { icon: "fas fa-phone", label: "Phone", value: "+1 (555) 123-4567" },
  { icon: "fas fa-map-marker-alt", label: "Address", value: "123 Elegance Avenue, Style District, Footwear City, FC 12345" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#2c3e50] to-[#1a2530] py-24 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')] opacity-10"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mb-6 tracking-tight">Contact Us</h1>
        <p class="text-xl text-gray-200 font-light max-w-2xl mx-auto leading-relaxed">
          Get in touch with Step Forward Insights for inquiries about footwear expertise, collaborations, or personalized advice.
        </p>
      </div>
    </div>
  </div>

  <!-- Content Section -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16 text-center">
          <p class="text-lg text-[#2c3e50] font-serif italic mb-4">At <span class="font-bold">Step Forward Insights</span>, we're passionate about footwear and dedicated to providing insightful, stylish guidance.</p>
          <p class="text-[#7f1d1d] font-medium">Whether you have questions about our latest articles, seek collaboration opportunities, or need expert advice on your next step, we're here to help.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 mb-20">
          <!-- Contact Info -->
          <div class="space-y-8">
            <h2 class="text-2xl font-serif font-bold text-[#2c3e50] border-b border-gray-100 pb-4">Reach Out</h2>
            
            <div class="space-y-6">
              {contactInfo.map((info, index) => (
                <div key={index} class="flex items-start group">
                  <div class="flex-shrink-0 mt-1 mr-4 text-[#7f1d1d] text-xl">
                    <i class={info.icon}></i>
                  </div>
                  <div>
                    <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">{info.label}</h3>
                    <p class="text-gray-800 mt-1">{info.value}</p>
                  </div>
                </div>
              ))}
            </div>

            <div class="pt-6 border-t border-gray-100">
              <p class="text-gray-600 italic">We respond to all inquiries within 24-48 hours. Let's <span class="text-[#7f1d1d] font-semibold">step forward</span> together!</p>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="bg-gray-50 rounded-xl p-8 shadow-sm">
            <h2 class="text-2xl font-serif font-bold text-[#2c3e50] mb-6">Send us a Message</h2>
            
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input 
                  type="text" 
                  id="name" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#7f1d1d] focus:border-transparent transition duration-200"
                  placeholder="Your full name"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#7f1d1d] focus:border-transparent transition duration-200"
                  placeholder="your.email@example.com"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                <input 
                  type="text" 
                  id="subject" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#7f1d1d] focus:border-transparent transition duration-200"
                  placeholder="How can we help?"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea 
                  id="message" 
                  rows="4"
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#7f1d1d] focus:border-transparent transition duration-200"
                  placeholder="Your message here..."
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-[#2c3e50] hover:bg-[#1a2530] text-white font-medium py-3 px-6 rounded-lg transition duration-300 transform hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#7f1d1d]"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>

        <!-- Quote Section -->
        <div class="text-center py-12 border-t border-b border-gray-100">
          <blockquote class="text-2xl md:text-3xl font-serif italic text-[#2c3e50] max-w-3xl mx-auto leading-relaxed">
            Elevating Footwear Knowledge with Depth and Style
          </blockquote>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  body {
    font-family: 'Georgia', serif;
  }
  
  .font-serif {
    font-family: 'Georgia', serif;
  }
  
  .font-sans {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }
  
  .transition-all {
    transition: all 0.3s ease;
  }
  
  .group:hover .hover-translate-y {
    transform: translateY(-4px);
  }
  
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .card-hover {
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
</style>