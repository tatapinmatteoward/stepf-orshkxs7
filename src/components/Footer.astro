---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' }
];
---

<footer class="bg-[#2c3e50] text-white py-12">
  <div class="container mx-auto px-4 text-center">
    <p class="text-lg mb-4">Step Forward Insights</p>
    <p class="text-sm opacity-75">&copy; {currentYear} Step Forward Insights. All rights reserved.</p>
    
    <div class="flex justify-center gap-6 mt-6">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-[#7f1d1d] transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-700">
      <p class="text-xs opacity-50">
        Elegant minimalist design with typographic focus
      </p>
    </div>
  </div>
</footer>